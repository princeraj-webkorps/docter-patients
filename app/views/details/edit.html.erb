<h1 style="text-align:center;color:white;background-color:red">Edit Your Details</h1>

<%= form_for @detail do |f| %>
    <div class="container">
  
    <div class="row">
    <%= f.text_field :name, placeholder: "Enter Your Full Name", autofocus: true %>
    <%= f.label :name_of_patient %>
    </div>

    <div class="row">
    <%= f.number_field :age, placeholder: "Enter Your Age", autofocus: true %>
    <%= f.label :age %>
    </div>
  
    <div class="row">
    <%= f.text_field :address, placeholder: "Enter Your Address", autofocus: true %>
    <%= f.label :communication_address %>
    </div>
 
    <div class="row">
    <%= f.number_field :contact, placeholder: "Enter Your Contact Number", autofocus: true %>
    <%= f.label :contact %>
    </div>
  
    <div class="row">
    <%= f.text_field :disease, placeholder: "Enter Your Disease", autofocus: true %>
    <%= f.label :disease_of_patient%>
    </div>
  
    <div class="row">
    <%= f.text_field :bloodgp, placeholder: "Enter Your Blood Group", autofocus: true %>
    <%= f.label :blood_group %>
    </div>

    <div class="row">
    <%= f.text_field :appointmentdate, placeholder: "choose your appointment date", autofocus: true %>
    <%= f.label :appointment_date %>
    </div>
  
  <%= f.submit "submit", class:"btn btn-success " %>
  </div>

  
  
<%end%>